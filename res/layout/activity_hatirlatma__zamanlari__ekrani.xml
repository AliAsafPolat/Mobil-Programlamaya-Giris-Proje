<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/hatirlatmaEkraniAnaLayout"
    android:orientation="vertical"
    tools:context=".Hatirlatma_Zamanlari_Ekrani">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/hatirlatmaEkraniIcLayout"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textViewHatirlatmalarYazisi"
            android:text="HatÄ±rlatmalar"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            />

        <Button
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_add_buton"
            android:layout_marginStart="200dp"
            android:id="@+id/button_yeni_hatirlatma"
            />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="10dp"
        android:id="@+id/recyclarView_hatirlatmalar"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/buttonEtkinlikEkraninaDon"
        android:text="Geri"
        />

</LinearLayout>