<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#483CF436"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView_etkinlik_gosterme_etkinlik_adi_yazisi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Etkinlik Adı : "
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_etkinlik_gosterme_etkinlik_detayi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="Etkinlik Detayı : "
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_etkinlik_gosterme_etkinlik_adi_yazisi" />

    <TextView
        android:id="@+id/textView_etkinlik_adi_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/textView_etkinlik_gosterme_etkinlik_adi_yazisi"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_etkinlik_detayi_enter"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:maxLines="4"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/textView_etkinlik_gosterme_etkinlik_detayi"
        app:layout_constraintTop_toBottomOf="@+id/textView_etkinlik_adi_enter" />

    <TextView
        android:id="@+id/textView_etkinlik_gosterme_etkinlik_adresi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="Etkinlik Adresi :"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_etkinlik_detayi_enter" />

    <TextView
        android:id="@+id/textView_etkinlik_adresi_enter"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:maxLines="4"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/textView_etkinlik_gosterme_etkinlik_adresi"
        app:layout_constraintTop_toBottomOf="@+id/textView_etkinlik_detayi_enter" />

    <Button
        android:id="@+id/button_etkinlik_gosterme_tamam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:layout_marginTop="12dp"
        android:text="Tamam"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_etkinlik_adresi_enter" />
</androidx.constraintlayout.widget.ConstraintLayout>